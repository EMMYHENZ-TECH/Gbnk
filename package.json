{
  "name": "gbnk-banking-api",
  "version": "1.0.0",
  "description": "A simple banking API with Express.js",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --watchAll --detectOpenHandles",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepare": "husky install",
    "docker:build": "docker build -t gbnk-api .",
    "docker:run": "docker run -p 7860:7860 gbnk-api"
  },
  "dependencies": {
    "express": "^4.18.2",
    "uuid": "^9.0.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "rate-limit-redis": "^3.0.0",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^3.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [
    "banking",
    "api",
    "express",
    "finance"
  ],
  "author": "Your Name",
  "license": "MIT"
}
